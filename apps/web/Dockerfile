FROM node:20-alpine AS builder
WORKDIR /app

# Paket tanÄ±mlarÄ±
COPY package*.json ./
COPY apps/web/package*.json ./apps/web/
COPY packages/ui/package*.json ./packages/ui/

# ðŸ”‘ Dev deps DAHÄ°L kur (turbo iÃ§in)
RUN npm ci

# Kaynak kod
COPY . .

# Build (turbo local devDep â†’ npx ile)
RUN npx turbo run build --filter=@castlyo/web

# --- Runtime ---
FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production

# Build Ã§Ä±ktÄ±sÄ±nÄ± ve gerekli node_modules'Ä± kopyala
COPY --from=builder /app/apps/web/.next ./apps/web/.next
COPY --from=builder /app/apps/web/package*.json ./apps/web/
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/packages ./packages
COPY --from=builder /app/package*.json ./

EXPOSE 3000
CMD ["npm","run","start","--workspace=@castlyo/web"]
