{
  "name": "castlyo-platform",
  "version": "1.0.0",
  "description": "Professional casting and talent matching platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@castlyo/web",
    "dev:api": "turbo run dev --filter=@castlyo/api",
    "lint": "turbo run lint",
    "migrate:schema": "node scripts/migrate-schema.js",
    "smoke:api": "node scripts/smoke-test.js",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "turbo run db:generate --filter=@castlyo/database",
    "db:push": "turbo run db:push --filter=@castlyo/database",
    "db:migrate": "turbo run db:migrate --filter=@castlyo/database",
    "db:check": "node scripts/dbcheck.js",
    "docker:dev": "docker-compose up -d",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run db:generate && npm run db:push"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.2",
    "@types/aws-sdk": "^0.0.42",
    "@types/react-easy-crop": "^1.16.0",
    "drizzle-kit": "^0.31.4",
    "prettier": "^3.1.1",
    "rimraf": "^6.0.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.888.0",
    "@aws-sdk/s3-request-presigner": "^3.888.0",
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.44.5",
    "next": "^14.2.32",
    "picocolors": "^1.1.1",
    "postgres": "^3.4.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-easy-crop": "^5.5.1",
    "react-hook-form": "^7.62.0",
    "swagger-ui-express": "^4.6.3",
    "undici": "^7.16.0",
    "zod": "^4.1.8"
  }
}
