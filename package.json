{
  "name": "castlyo-platform",
  "version": "1.0.0",
  "description": "Professional casting and talent matching platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@castlyo/web",
    "dev:api": "turbo run dev --filter=@castlyo/api",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "turbo run db:generate --filter=@castlyo/database",
    "db:push": "turbo run db:push --filter=@castlyo/database",
    "db:migrate": "turbo run db:migrate --filter=@castlyo/database",
    "docker:dev": "docker-compose up -d",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run db:generate && npm run db:push"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.2",
    "drizzle-kit": "^0.31.4",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "drizzle-orm": "^0.44.5",
    "next": "^15.5.3",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "undici": "^7.16.0"
  }
}
